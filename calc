#!/bin/bash
set -eu -o pipefail

if [[ $(command -v docker) ]]; then
  docker container run \
    --name calc$$ \
    --rm \
    -it \
    -u "$(id -u):$(id -g)" \
    ghcr.io/shakiyam/calc "$@"
else
  podman container run \
    --name calc$$ \
    --rm \
    -it \
    ghcr.io/shakiyam/calc "$@"
fi
